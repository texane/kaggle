  . cols = [4:33];
  . data = nn_csvread('../data/fordTrain.csv');
  . [nn, mean, std] = nn_do_train(data, cols);
  . nn_do_submit(data, nn, mean, std, cols);
  . nn_do_score(data, nn, mean, std, cols, tids = [42])

